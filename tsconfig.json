{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "dom",
            "dom.iterable",
            "es2016",
            "es2020",
        ],
        "rootDir": ".",
        "baseUrl": ".",
        "checkJs": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noUncheckedIndexedAccess": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "**/*.scss",
        "**/*.cjs",
        "**/*.mjs",
        "**/*.js",
        "src"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "out"
    ]
}