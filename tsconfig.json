{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "preserve",
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "@*": [
                "./src/*"
            ]
        },
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "noEmit": true,
        "incremental": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "tsconfig.json",
        "tsconfig.prod.json",
        "tsconfig.eslint.json",
        "next-env.d.ts",
        "environment.d.ts",
        "src/**/*",
        "public/**/*",
        ".storybook/**/*",
        // "./global-types.d.ts",
        // "src"
    ],
    "exclude": [
        "out",
        "dist",
        ".next",
        "node_modules",
        // whatever paths you intend not to lint
        "prettier.config.js",
        ".eslint.js",
        "lint-staged.config.js",
        "next.config.js",
        "src/utils/data-base.ts",
    ]
}