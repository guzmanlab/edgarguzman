{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "preserve",
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            // "@components/*": [
            //     "./src/components/*"
            // ],
            // "@lib/*": [
            //     "./src/lib/*"
            // ],
            // "@interfaces/*": [
            //     "./src/interfaces/*"
            // ],
            // "@utils/*": [
            //     "./src/utils/*"
            // ],
            "@*": [
                "./src/*",
                "./server/*",
                // "./*"
            ]
        },
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "noEmit": true,
        "incremental": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitThis": false
    },
    "include": [
        "tsconfig.json",
        "tsconfig.prod.json",
        "tsconfig.eslint.json",
        "next-env.d.ts",
        "environment.d.ts",
        "src/**/*",
        "public/**/*",
        ".storybook/**/*",
        // "./global-types.d.ts",
        // "src"
    ],
    "exclude": [
        "node_modules",
        // whatever paths you intend not to lint
        "prettier.config.js",
        ".eslint.js",
        "lint-staged.config.js",
        "next.config.js",
        "src/utils/data-base.ts"
    ]
}