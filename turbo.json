{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "dev": {
      "dependsOn": ["^dev", "^db:generate", "^auth:build"],
      "cache": false,
      "persistent": false
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": false
    },
    "db:generate": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"],
      "cache": false
    },
    "db:studio": {
      "dependsOn": ["^db:studio"],
      "cache": false
    },
    "db:drop": {
      "dependsOn": ["^db:drop"],
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"],
      "cache": false
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "auth:build": {
      "dependsOn": ["^auth:build"],
      "cache": false
    },
    "start": {
      "dependsOn": ["^start"],
      "cache": false,
      "persistent": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false,
      "persistent": false
    }
  }
}
